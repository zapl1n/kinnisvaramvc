{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "frontend/src/**/*.ts",
    "frontend/src/**/*.d.ts",
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
